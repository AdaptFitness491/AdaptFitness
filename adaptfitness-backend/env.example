# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=adaptfitness

# Database Schema Management
# IMPORTANT: Set to 'true' for initial deployment to create tables
# Then set to 'false' after tables are created for production safety
TYPEORM_SYNCHRONIZE=false

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-adaptfitness-2024
JWT_EXPIRES_IN=24h

# Application Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Health Metrics Configuration
HEALTH_METRICS_ENABLED=true
STREAK_TRACKING_ENABLED=true
TIMEZONE_DEFAULT=UTC

# Validation Configuration
VALIDATION_STRICT_MODE=true
VALIDATION_TRANSFORM=true

# Logging
LOG_LEVEL=debug
